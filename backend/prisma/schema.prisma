// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  ownedProjects Project[]
  assignedTasks Task[]     @relation("TaskAssignee")
  createdTasks  Task[]     @relation("TaskCreator")
  comments      Comment[]
  conversations Conversation[]

  @@map("users")
}

model Project {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  color       String   @default("#3b82f6")
  status      String   @default("active") // active, archived, completed
  isStarred   Boolean  @default(false)
  ownerId     String   @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  owner               User                     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  tasks               Task[]
  mcpPlans            MCPPlan[]
  claudeTodos         ClaudeTodo[]
  workspaceMappings   WorkspaceMapping[]
  claudeCodePlans     ClaudeCodePlan[]
  conversations       Conversation[]
  permissionRules     PermissionRule[]
  messages            Message[]
  conversationPermissions ConversationPermission[]
  interactivePrompts  InteractivePrompt[]

  @@map("projects")
}

model Task {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  description  String?
  status       String    @default("todo") // todo, in_progress, done
  priority     String    @default("medium") // low, medium, high
  projectId    String   @db.ObjectId
  assigneeId   String?  @db.ObjectId
  createdById  String   @db.ObjectId
  dueDate      DateTime?
  completedAt  DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  order        Int       @default(0)
  labels       String?   // JSON array of strings
  commentCount Int       @default(0)

  // Relations
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee    User?        @relation("TaskAssignee", fields: [assigneeId], references: [id])
  createdBy   User         @relation("TaskCreator", fields: [createdById], references: [id])
  comments    Comment[]
  claudeTodos ClaudeTodo[] @relation("ClaudeTodoSync")

  @@map("tasks")
}

model Comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  taskId    String   @db.ObjectId
  authorId  String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  task   Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@map("comments")
}

model MCPAgent {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String    @unique
  description String?
  endpoint    String
  isActive    Boolean   @default(true)
  lastSeen    DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  plans MCPPlan[]

  @@map("mcp_agents")
}

model MCPPlan {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  agentId     String   @db.ObjectId
  agentName   String
  projectId   String
  status      String   @default("pending") // pending, in_progress, completed, failed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  agent   MCPAgent  @relation(fields: [agentId], references: [id], onDelete: Cascade)
  project Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks   MCPTask[]

  @@map("mcp_plans")
}

model MCPTask {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  status      String   @default("todo") // todo, in_progress, done
  priority    String   @default("medium") // low, medium, high
  order       Int      @default(0)
  planId      String   @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  plan MCPPlan @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@map("mcp_tasks")
}

model ClaudeTodo {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  content           String
  status            String    // pending, in_progress, completed
  priority          String    // high, medium, low
  projectId         String    @db.ObjectId @map("project_id")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")
  metadata          Json?
  syncedTaskId      String?   @db.ObjectId @map("synced_task_id")
  orderIndex        Int       @default(0) @map("order_index")
  createdBy         String    @default("claude") @map("created_by") // claude, human, system
  claudeCodePlanId  String?   @db.ObjectId @map("claude_code_plan_id") // Link to associated plan

  // Relations
  project      Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  syncedTask   Task?            @relation("ClaudeTodoSync", fields: [syncedTaskId], references: [id], onDelete: SetNull)
  linkedPlan   ClaudeCodePlan?  @relation("PlanTodos", fields: [claudeCodePlanId], references: [id], onDelete: SetNull)

  @@map("claude_todos")
  @@index([projectId])
  @@index([status])
  @@index([priority])
  @@index([orderIndex])
  @@index([claudeCodePlanId])
}

model WorkspaceMapping {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  workspacePath String   @unique
  projectId     String
  lastAccessed  DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("workspace_mappings")
}

model ClaudeCodePlan {
  id               String             @id @default(auto()) @map("_id") @db.ObjectId
  title            String
  content          String
  status           String             @default("accepted") // accepted, implemented, archived
  projectId        String
  sessionId        String?
  capturedAt       DateTime           @default(now())
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  metadata         Json?              // Store transcript path, cwd, etc.

  // Relations
  project          Project            @relation(fields: [projectId], references: [id], onDelete: Cascade)
  linkedTodos      ClaudeTodo[]       @relation("PlanTodos")
  reviewPrompts    InteractivePrompt[] @relation("PlanReview")

  @@map("claude_code_plans")
  @@index([projectId])
  @@index([status])
  @@index([capturedAt])
}

model Conversation {
  id               String    @id @default(auto()) @map("_id") @db.ObjectId
  title            String?
  projectId        String
  userId           String   @db.ObjectId
  model            String    @default("claude-3-sonnet") // Model used for the conversation
  status           String    @default("active") // active, archived
  claudeSessionId  String?   // Claude Code SDK session ID for context preservation
  contextTokens    Int       @default(0) // Current context window token usage
  lastCompacted    DateTime? // When context was last compacted to manage token usage
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  metadata         Json?     // Store additional conversation metadata

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("conversations")
  @@index([projectId])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([claudeSessionId])
}

model ConversationPermission {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  projectId String   @db.ObjectId
  toolName  String   // Edit, MultiEdit, Write, Bash, etc.
  status    String   @default("granted") // granted, denied, temporary
  grantedBy String   @default("user") // user, system, auto
  grantedAt DateTime @default(now())
  expiresAt DateTime? // Optional expiration for temporary permissions
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  metadata  Json?    // Store additional permission context

  // Relations
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("conversation_permissions")
  @@unique([projectId, toolName])
  @@index([projectId])
  @@index([toolName])
  @@index([status])
}

model Message {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  projectId String
  role      String    // user, assistant, system
  content   String
  
  // Claude WebSocket format fields
  type            String?   // claude_json, etc.
  claudeData      Json?     // Full Claude WebSocket data structure
  claudeMessageId String?   // data.message.id from Claude
  model           String?   // data.message.model
  sessionId       String?   // data.session_id
  usage           Json?     // data.message.usage (tokens, etc.)
  
  // Legacy/fallback fields
  tokenCount Int?      // Fallback token count
  status     String    @default("completed") // sending, completed, failed
  error      String?   // Error message if failed
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  metadata   Json?     // Additional metadata
  timestamp  BigInt?   // WebSocket timestamp

  // Relations
  project     Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  attachments MessageAttachment[]
  codeBlocks  CodeBlock[]

  @@map("messages")
  @@index([projectId])
  @@index([role])
  @@index([createdAt])
  @@index([sessionId])
}

model MessageAttachment {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  messageId   String   @db.ObjectId
  filename    String
  mimeType    String
  size        Int      // File size in bytes
  url         String   // URL or path to the file
  createdAt   DateTime @default(now())

  // Relations
  message     Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@map("message_attachments")
  @@index([messageId])
}

model CodeBlock {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  messageId   String   @db.ObjectId
  language    String   // Programming language
  code        String
  filename    String?  // Optional filename
  lineStart   Int?     // Starting line number if extracted from a file
  lineEnd     Int?     // Ending line number if extracted from a file
  createdAt   DateTime @default(now())

  // Relations
  message     Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@map("code_blocks")
  @@index([messageId])
  @@index([language])
}

model InteractivePrompt {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  projectId      String
  sessionId      String?
  type           String    // permission, tool_usage, multiple_choice, three_option, plan_review
  title          String?
  message        String
  options        Json      // Array of PromptOption objects
  context        Json?     // PromptContext object with tool info
  status         String    @default("pending") // pending, answered, timeout, auto_handled
  selectedOption String?   // ID of the selected option
  autoHandler    String?   // Strategy that handled this prompt
  timeoutAt      DateTime  @default(now())
  createdAt      DateTime  @default(now())
  respondedAt    DateTime?
  metadata       Json?     // Enhanced analytics and metadata for permission tracking
  linkedPlanId   String?   @db.ObjectId // Link to created claudeCodePlan after approval

  // Relations
  project    Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  linkedPlan ClaudeCodePlan? @relation("PlanReview", fields: [linkedPlanId], references: [id], onDelete: SetNull)

  @@map("interactive_prompts")
  @@index([projectId])
  @@index([status])
  @@index([timeoutAt])
  @@index([sessionId])
}

model PermissionRule {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  tool      String
  action    String
  resource  String   @default("*")
  type      String   // 'allow' or 'deny'
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@unique([tool, action, resource, projectId])
  @@index([projectId])
  @@index([type])
  @@map("permission_rules")
}