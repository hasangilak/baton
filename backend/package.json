{
  "name": "baton-backend",
  "version": "1.0.0",
  "description": "Backend server for Baton task manager with MCP integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --noEmitOnError false || true",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "mcp": "node dist/mcp-server.js",
    "mcp:stdio": "MCP_TRANSPORT_MODE=stdio node dist/mcp-server.js",
    "mcp:websocket": "MCP_TRANSPORT_MODE=websocket MCP_SERVER_PORT=3002 node dist/mcp-server.js",
    "mcp:dev": "ts-node src/mcp-server.ts",
    "mcp:dev:websocket": "MCP_TRANSPORT_MODE=websocket MCP_SERVER_PORT=3002 ts-node src/mcp-server.ts",
    "test:mcp": "node test-mcp.js",
    "test:mcp:db": "node test-mcp-db.js",
    "test:workspace": "node test-workspace-context.js",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "db:migrate": "prisma migrate dev",
    "db:seed": "ts-node prisma/seed.ts",
    "db:reset": "prisma migrate reset --force && npm run db:seed"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "task-manager",
    "mcp",
    "ai-agents"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.16",
    "@types/pg": "^8.11.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "@prisma/client": "^5.9.1",
    "@types/ws": "^8.18.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "prisma": "^5.9.1",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "ws": "^8.18.3",
    "zod": "^3.22.4"
  }
}
