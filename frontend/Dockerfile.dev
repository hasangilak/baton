# Development Dockerfile for Baton Frontend
FROM node:22-alpine AS development

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# No need for install script - dependencies handled in docker-compose

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001

# Set proper permissions (including the install script)
RUN chown -R nodejs:nodejs /app

# Switch to nodejs user for security
USER nodejs

# Expose ports (5173 for app, 5174 for HMR WebSocket)
EXPOSE 5173 5174

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:5173/ || exit 1

# Set Node.js options for crypto compatibility
ENV NODE_OPTIONS="--openssl-legacy-provider"

# Default command (overridden in docker-compose for dev dependency management)
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]